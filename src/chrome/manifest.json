{
	"manifest_version": 2,
	"name": "SaveThisSession",
	"version": "1.0",
	"default_locale": "en",
	"description":  "Save and manage easily your tabs and windows on google chrome.",
	"icons": {
		"16": "assets/images/icon16.png",
		"48": "assets/images/icon48.png",
		"128":	"assets/images/icon128.png"
	},
	"browser_action": {
		"default_icon": {
			"19": "assets/images/icon19.png",
			"38": "assets/images/icon38.png"
		},
		"default_title": "SaveThisSession",
		"default_popup": "popup.html"
	},
	"background": {
		"scripts": "scripts/background.js",
		"persistent": false
	},
	"options_page": "options.html",
	"permissions": []
}